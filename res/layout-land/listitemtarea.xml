<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/claret"
        android:visibility="visible"
        app:cardBackgroundColor="@color/cards"
        app:cardCornerRadius="10dp"
        app:contentPadding="20dp"
        tools:visibility="visible"
        android:outlineSpotShadowColor="@color/light_dark"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"        >

        <ImageView
            android:id="@+id/prioritaria"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/baseline_stars_24" />

        <TextView
            android:id="@+id/tituloTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="tarea" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/dias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="450dp"
            android:layout_marginTop="30dp"
            android:text="tarea" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="28dp"
            android:text="tarea" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>